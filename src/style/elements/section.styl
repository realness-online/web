@require '../variables'
section.page
  @media (max-width: min-screen)
    padding-top: 1rem
  overflow: hidden
  width:100%
  & > header
    padding: base-line
    display:flex
    justify-content: space-between
    z-index: 2
    h1
      color:blue
      vertical-align: top
      margin: 0
      line-height: 1.33
      @media (min-width: max-screen)
        line-height: .66
  & > hgroup
    text-align: center
    h1
      color: blue
      margin: 0
      margin-bottom: base-line * 2
