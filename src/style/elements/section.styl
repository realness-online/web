@require '../variables'
section.page
  overflow: hidden
  width:100%
  & > hgroup
    text-align: center
    h1
      color: blue
      margin: 0
      margin-bottom: base-line * 2
  & > header
    padding: base-line
    display:flex
    justify-content: space-between
    z-index: 2
    h1
      color:blue
      vertical-align: top
      margin: 0
      line-height: 1.33
      @media (min-width: max-screen)
        line-height: .66
    details
      &[open]
        margin-right: inherit;
        & > summary
          margin-bottom: base-line
