@require "../variables"

body
  background-color: transparent
  &[contenteditable]
    // user-select: auto
    border: base-line solid red
    border-top: none
    border-bottom:none
    padding-left: 0
    padding-right: 0

  & > header
  & > footer
    display:flex
    flex-direction: column
    align-items: center
    justify-content: space-around

  & > header
    flex-direction: row
    justify-content: space-between
    align-items: center;
    width: 100vw
    @media screen and (min-width: max-screen + 10rem)
      height: base-line * 1.5
    & svg
      height:base-line * 1.5
      width:base-line * 3
      margin-left: base-line
      stroke:blue
      fill:green
      opacity:0.4
      stroke-width:5
      @media screen and (min-width: max-screen + 10rem)
        position: fixed
        top:base-line
        left:0
