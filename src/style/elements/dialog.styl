body:has(dialog.confirm[open]) {
  overflow: hidden;
}
dialog {
  outline: none;
  margin: base-line auto 0;
  padding: base-line * 0.5;
  border: 3px solid red;
  border-radius: base-line * 0.5;
  color: var(--text-color);
  background-color: var(--black-background);
  &:focus {
    outline: none;
  }
  &::backdrop {
    backdrop-filter: blur(base-line * 0.25 );
  }
}

dialog.confirm {
  z-index: 1000;
  & > article {
    header {
      padding: base-line;
      display: flex;
      flex-direction: column;
      h1 {
        text-align: center;
        width: 100%;
        color: red;
      }
      p {
        width: 100%;
        color: blue;
      }
    }
    p {
      text-align: center;
      color: var(--white-text);
    }
    menu {
      padding: base-line;
      display: flex;
      justify-content: space-between;
      button.delete {
        border-color: var(--red);
        color: var(--red);
        font-weight: bold;
      }
    }
  }
}
