 @require "../variables"

details
  & > summary
    color:blue
    font-size: 3em
    cursor: pointer
    &:focus
      outline:none
    &::-webkit-details-marker
      display:none
  &[open]
    min-height: 100vh
    border: none
    & > summary
      color: red
    & > *:not(summary)
      animation-name: slideInDown
