form
  display: flex
  flex-direction: column
  justify-content: space-around

input
textarea
[contenteditable]
  user-select: text

input
textarea
  border-color: transparent
  background-color: transparent
  &:disabled
    opacity:1
    user-select: none
    -webkit-text-fill-color: black
    color:black
button
input
textarea
  appearance:none
  -webkit-tap-highlight-color: inherit
  tap-highlight-color: inherit
  outline: inherit
  text-rendering: inherit
  font: inherit
  font-family: inherit
  font-size: inherit
  font-weight: inherit
  color: inherit

input:focus
  transition-property: all

button
  background-color: inherit
  vertical-align: middle
  text-transform:capitalize
  standard-button: black
  &:disabled
    standard-button: lighten(black, 30%)
  @media (prefers-color-scheme: dark)
    standard-button: white

fieldset
  padding: (base-line / 2 )
  overflow: hidden
  standard-border: black
  @media (prefers-color-scheme: dark)
    standard-border: white
