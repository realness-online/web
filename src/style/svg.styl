@require 'variables'
svg
  shape-rendering: optimizeSpeed
  color-rendering: optimizeSpeed
  buffered-rendering: static
  transition-property: none
  line-height: 0
  pointer-events: visible
  height: base-line * 1.5
  width: base-line * 1.5
  overflow: auto
  outline: none
  display: block
  stroke-width: 0
  mix-blend-mode: screen
  & use:active
    stroke-width: 3px
    user-select: all
    fill: white-background
    transition-property: padding, fill
    transition-duration: 1.4s
    transition-timing-function: ease
svg.background
  fill: transparent
  @media (prefers-color-scheme: dark)
    fill: blue
svg.background
use.working
  position: absolute
  z-index: 0
svg.camera
  width: base-line * 2.5
  height: base-line * 2
svg.working
use.working
  width: round(base-line * 3.3, 2)
  height: base-line
  margin: auto
  animation-name: working
  animation-timing-function: linear
  animation-duration: 1.33s
  animation-delay: 0.33s
  animation-iteration-count: infinite
@media (max-width: page-width), (max-height: page-width)
  svg.fullscreen
  use.fullscreen
    visibility: hidden
