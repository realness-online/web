@require 'mixins'
// https://convertacolor.com/
black             = hsla(300,  1%, 35%, 0.9)
dark-black        = hsla(300,  1%, 2%, 0.99)
background-black  = hsla(228, 9.8%, 10%, 1)
white             = hsla( 57, 13%, 69%, 0.9)
white-background  = hsla( 57, 41%, 69%, 0.2)  // #FCF5EA, hsla(37, 75%, 95%, 1) as solid
blue              = hsla(203, 58%, 57%, 0.69) // #52A0D1
green             = hsla(125, 29%, 55%, 0.80) // #4E8D53
red               = hsla(353, 83%, 57%, 0.73) // #ec364c
yellow            = rgba(248, 231,  28, 0.65)
orange            = rgba(245, 166,  35, 0.80)

base-line = 1.333rem // smallest horizontal block of content
base-line  = 1.25rem // smallest horizontal block of content

// Modular scale. for small and larger screens
// if you change the scales you'll need to recalculate when the are applied
// so that the typography scales smoothly http://type-scale.com/
min-modular = 1.250
max-modular = 1.414

min-font = 1.125rem
max-font = 1.33rem

// Media queries defining device types
pad-begins = round(base-line * 26)
typing-begins = round(base-line * 48)
display-begins = round(base-line * 60)

page-width = round(base-line * 22)

poster-min-width = round(base-line * 10, 3)

poster-grid-height = round(base-line * 20, 3)
poster-feed-height = round((1.20 * page-width), 2)
