standard-border($color=currentColor)
  border: (base-line / 6) solid $color
  border-radius: (base-line / 3)
  @media (prefers-color-scheme: dark)
    border-color:white

standard-button($color=currentColor)
  color: $color
  @media (prefers-color-scheme: dark)
    color:white
  standard-border: $color
  border-radius: base-line
  padding: (base-line / 2)
  line-height: 1
  cursor: pointer
  text-align: center
  font-weight: normal
