black             = hsla(300,  1%, 35%, 0.95)
white             = hsla( 51, 41%, 69%, 0.7)
white-background  = hsla( 57, 41%, 69%, 0.2)
blue              = hsla(203, 58%, 57%, 0.69)
green             = hsla(136, 47%, 53%, 0.8)
red               = hsla(353, 83%, 57%, 0.73)
yellow            = rgba(248, 231,  28, 0.65)

.yellow
  background-color:yellow
  border-color:yellow
  color:darken(yellow, 25%)
  -webkit-tap-highlight-color: yellow
  &::placeholder
    color:lighten(yellow, 70%)

.red
  background-color:red
  border-color:red
  color:lighten(red, 70%)
  -webkit-tap-highlight-color: red
  &::placeholder
    color:lighten(red, 70%)

.green
  background-color:green
  border-color:green
  color:lighten(green, 70%)
  -webkit-tap-highlight-color: green
  &::placeholder
    color:lighten(green, 70%)

.blue
  background-color:blue
  border-color:blue
  color:lighten(blue, 80%)
  -webkit-tap-highlight-color: blue
  &::placeholder
    color:lighten(blue, 80%)

.black
  background-color:black
  border-color: black
  color:lighten(black, 40%)
  -webkit-tap-highlight-color: black
  &::placeholder
    color:lighten(black, 40%)

html
  background-color:white-background
