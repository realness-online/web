service firebase.storage {
  match /b/{bucket}/o {
    match /people {
      match /index.html {
        allow read, write: if request.auth != null;
      }
      match /{mobile}/{user_file=**} {
	      allow read: if request.auth != null;
        allow write: if request.auth.token.phone_number == mobile
      }
    }
  }
}
