rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /people {
      allow read: if request.auth != null
      match /{mobile}/{all_files=**} {
        allow read: if mobile == '+16282281824';
	      allow read: if request.auth != null;
        allow write, delete: if request.auth.token.phone_number == mobile;
      }
    }
  }
}


