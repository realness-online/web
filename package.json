{
  "name": "@realness.online/web",
  "version": "0.9.16",
  "private": false,
  "description": "Source code for https://realness.online. When licensed moderators will be responsible for the content within their network. In this regard moderators run the network, as it is their ass that is on the line.",
  "author": "Scott Fryxell <scott.fryxell@hey.com>",
  "license": "UNLICENSED",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "webpack && vue-cli-service build",
    "deploy": "yarn lint && vue-cli-service test:unit --coverage --verbose && yarn build && firebase deploy --only hosting,storage",
    "deploy:development": "yarn build && firebase use development && deploy --only hosting,storage  --use development",
    "lint": "vue-cli-service lint",
    "test": "vue-cli-service test:unit",
    "workers:build": "webpack",
    "workers:dev": "webpack --mode=development --watch",
    "functions:serve": "firebase serve --only functions",
    "functions:shell": "firebase functions:shell",
    "functions:start": "yarn shell",
    "functions:deploy": "firebase deploy --only functions",
    "functions:logs": "firebase functions:log"
  },
  "dependencies": {
    "@realness.online/potrace": "2.1.22",
    "firebase": "^8.2.1",
    "idb-keyval": "^5.0.2",
    "libphonenumber-js": "^1.7.44",
    "node-vibrant": "^3.2.1-alpha.1",
    "register-service-worker": "^1.7.1",
    "svgo": "^1.3.0",
    "vue": "2.6.12",
    "vue-router": "^3.1.5",
    "vue-template-compiler": "2.6.12"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/eslint-parser": "^7.12.1",
    "@vue/cli-plugin-babel": "~4.5.6",
    "@vue/cli-plugin-e2e-cypress": "~4.5.6",
    "@vue/cli-plugin-eslint": "~4.5.6",
    "@vue/cli-plugin-pwa": "~4.5.6",
    "@vue/cli-plugin-unit-jest": "~4.5.6",
    "@vue/cli-service": "~4.5.6",
    "@vue/eslint-config-standard": "^6.0.0",
    "@vue/test-utils": "^1.1.0",
    "babel-eslint": "^10.1.0",
    "browserify-fs": "^1.0.0",
    "buffer-browserify": "^0.2.5",
    "eslint": "^7.14.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^5.0.0",
    "eslint-plugin-vue": "^7.1.0",
    "fake-indexeddb": "^3.0.0",
    "firebase-tools": "^9.1.0",
    "flush-promises": "^1.0.2",
    "jest-fetch-mock": "^3.0.1",
    "jest-localstorage-mock": "^2.4.0",
    "jest-serializer-vue": "^2.0.2",
    "jsdom-worker-fix": "git://github.com/scott-fryxell/jsdom-worker.git",
    "mockdate": "^3.0.2",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "vue-jest": "^3.0.7",
    "webpack": "^5.9.0",
    "webpack-bundle-analyzer": "^4.3.0",
    "webpack-cli": "^4.0.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "browser": true,
      "es2020": true,
      "jest": true,
      "serviceworker": true,
      "worker": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:vue/recommended",
      "@vue/standard"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {
      "no-import-assign": "off",
      "camelcase": 0,
      "indent": "off",
      "lines-between-class-members": 0,
      "vue/no-v-html": "off",
      "vue/prop-name-casing": [
        "error",
        "snake_case"
      ],
      "vue/singleline-html-element-content-newline": "off",
      "vue/max-attributes-per-line": [
        "error",
        {
          "singleline": 6,
          "multiline": {
            "max": 2,
            "allowFirstLine": true
          }
        }
      ],
      "vue/html-closing-bracket-spacing": [
        "error",
        {
          "selfClosingTag": "always"
        }
      ],
      "vue/html-closing-bracket-newline": [
        "error",
        {
          "singleline": "never",
          "multiline": "never"
        }
      ]
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 2%"
  ],
  "jest": {
    "notify": false,
    "notifyMode": "change",
    "bail": 0,
    "verbose": false,
    "collectCoverage": false,
    "restoreMocks": true,
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "vue"
    ],
    "setupFiles": [
      "<rootDir>/tests/unit/setup.js",
      "<rootDir>/tests/polyfill/createRange.js",
      "<rootDir>/tests/polyfill/scrollIntoView.js",
      "<rootDir>/tests/polyfill/IntersectionObserver.js",
      "<rootDir>/tests/polyfill/FileReaderSync.js",
      "jest-localstorage-mock",
      "jsdom-worker-fix"
    ],
    "transform": {
      "^.+\\.vue$": "vue-jest",
      ".+\\.(css|styl|less|sass|scss|svg|png|jpg|ttf|woff|woff2)$": "jest-transform-stub",
      "^.+\\.jsx?$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "\\.pnp\\.[^\\/]+$"
    ],
    "coverageDirectory": "<rootDir>/tests/unit/coverage",
    "cacheDirectory": "<rootDir>/tests/unit/cache",
    "collectCoverageFrom": [
      "src/**/*.{js,vue}",
      "!src/main.js",
      "!src/workers/service.worker.js",
      "!src/workers/register_service_worker.js",
      "!src/router.js",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 97,
        "branches": 90,
        "functions": 98,
        "lines": 98
      }
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "snapshotSerializers": [
      "jest-serializer-vue"
    ],
    "testMatch": [
      "**/tests/unit/**/*.spec.(js|jsx|ts|tsx)|**/__tests__/*.(js|jsx|ts|tsx)"
    ],
    "testURL": "http://localhost/"
  }
}
