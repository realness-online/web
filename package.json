{
  "name": "@realness.online/web",
  "version": "1.1.1",
  "private": false,
  "description": "When people search for 'outsider social network' they'll find realness online",
  "author": "Scott Fryxell <scott.fryxell@hey.com>",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "yarn workers && vue-cli-service build",
    "test:e2e": "cypress open",
    "test:e2e:ci": "cypress run --browser chrome --headless",
    "lint": "vue-cli-service lint",
    "deploy": "yarn lint && yarn test --coverage --verbose && yarn build && firebase deploy --only hosting,storage -m $npm_package_version",
    "release": "gh release create $npm_package_version && yarn deploy",
    "test": "TZ=UTC vue-cli-service test:unit",
    "workers": "webpack --config workers.config.js",
    "workers:dev": "yarn workers --mode=development --watch"
  },
  "dependencies": {
    "@realness.online/potrace": "2.1.22",
    "alloyfinger": "^0.1.16",
    "firebase": "^8.2.1",
    "idb-keyval": "^5.0.2",
    "libphonenumber-js": "^1.7.44",
    "node-vibrant": "^3.2.1-alpha.1",
    "object-hash": "^2.1.1",
    "register-service-worker": "^1.7.1",
    "svgo": "^1.3.0",
    "v-hotkey": "^0.9.0",
    "vue": "2.6.12",
    "vue-router": "^3.1.5",
    "vue-template-compiler": "2.6.12"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/eslint-parser": "^7.12.1",
    "@testing-library/cypress": "^8.0.1",
    "@testing-library/vue": "^5.8.2",
    "@vue/cli-plugin-babel": "~4.5.6",
    "@vue/cli-plugin-e2e-cypress": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.6",
    "@vue/cli-plugin-pwa": "~4.5.6",
    "@vue/cli-plugin-unit-jest": "~4.5.6",
    "@vue/cli-service": "~4.5.6",
    "@vue/eslint-config-standard": "^6.0.0",
    "@vue/test-utils": "^1.1.0",
    "babel-eslint": "^10.1.0",
    "browserify-fs": "^1.0.0",
    "buffer-browserify": "^0.2.5",
    "cypress": "^8.3.1",
    "eslint": "^7.14.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^5.0.0",
    "eslint-plugin-vue": "^7.1.0",
    "fake-indexeddb": "^3.0.0",
    "firebase-tools": "^9.1.0",
    "flush-promises": "^1.0.2",
    "jest-fetch-mock": "^3.0.1",
    "jest-localstorage-mock": "^2.4.0",
    "jest-serializer-vue": "^2.0.2",
    "jsdom-worker-fix": "git://github.com/scott-fryxell/jsdom-worker.git",
    "mockdate": "^3.0.2",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "start-server-and-test": "^1.14.0",
    "stream-browserify": "^3.0.0",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "vue-jest": "^3.0.7",
    "webpack": "^5.9.0",
    "webpack-bundle-analyzer": "^4.3.0",
    "webpack-cli": "^4.0.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "browser": true,
      "es2020": true,
      "jest": true,
      "serviceworker": true,
      "worker": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:vue/recommended",
      "@vue/standard"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {
      "no-import-assign": "off",
      "camelcase": 0,
      "indent": "off",
      "lines-between-class-members": 0,
      "vue/no-v-html": "off",
      "vue/prop-name-casing": [
        "error",
        "snake_case"
      ],
      "vue/singleline-html-element-content-newline": "off",
      "vue/max-attributes-per-line": [
        "error",
        {
          "singleline": 6,
          "multiline": {
            "max": 3,
            "allowFirstLine": true
          }
        }
      ],
      "vue/html-closing-bracket-spacing": [
        "error",
        {
          "selfClosingTag": "always"
        }
      ],
      "vue/html-closing-bracket-newline": [
        "error",
        {
          "singleline": "never",
          "multiline": "never"
        }
      ]
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 2%"
  ],
  "jest": {
    "notify": false,
    "notifyMode": "change",
    "bail": 0,
    "verbose": false,
    "collectCoverage": false,
    "restoreMocks": true,
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "vue"
    ],
    "setupFiles": [
      "<rootDir>/tests/unit/setup.js",
      "<rootDir>/tests/polyfill/createrange.js",
      "<rootDir>/tests/polyfill/scrollIntoView.js",
      "<rootDir>/tests/polyfill/IntersectionObserver.js",
      "<rootDir>/tests/polyfill/FileReaderSync.js",
      "jest-localstorage-mock",
      "jsdom-worker-fix"
    ],
    "transform": {
      "^.+\\.vue$": "vue-jest",
      ".+\\.(css|styl|less|sass|scss|svg|png|jpg|ttf|woff|woff2)$": "jest-transform-stub",
      "^.+\\.jsx?$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "\\.pnp\\.[^\\/]+$"
    ],
    "coverageDirectory": "<rootDir>/artifacts/unit/coverage",
    "cacheDirectory": "<rootDir>/artifacts/unit/cache",
    "collectCoverageFrom": [
      "src/**/*.{js,vue}",
      "!src/main.js",
      "!src/workers/service.js",
      "!src/views/router.js",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 94,
        "branches": 85,
        "functions": 93,
        "lines": 94
      }
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "snapshotSerializers": [
      "jest-serializer-vue"
    ],
    "testMatch": [
      "**/tests/unit/**/*.spec.(js|jsx|ts|tsx)|**/__tests__/*.(js|jsx|ts|tsx)"
    ],
    "testURL": "http://localhost/"
  },
  "license": "UNLICENSED"
}
