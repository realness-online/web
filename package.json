{
  "name": "@realness.online/web",
  "version": "0.7.7",
  "private": false,
  "description": "Source code for https://realness.online. When licensed moderators will be responsible for the content within their network. In this regard moderators run the network, as it is their ass that is on the line.",
  "author": "Scott Fryxell <scott.fryxell@hey.com>",
  "license": "UNLICENSED",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "build:workers": "webpack",
    "dev:workers": "webpack --watch",
    "lint": "vue-cli-service lint",
    "test:unit": "vue-cli-service test:unit",
    "test:unit:watch": "vue-cli-service test:unit --watch",
    "test:e2e": "vue-cli-service test:e2e",
    "deploy": "yarn build && firebase deploy --only hosting,storage",
    "functions:serve": "firebase serve --only functions",
    "functions:shell": "firebase functions:shell",
    "functions:start": "yarn shell",
    "functions:deploy": "firebase deploy --only functions",
    "functions:logs": "firebase functions:log"
  },
  "dependencies": {
    "@realness.online/potrace": "2.1.16",
    "firebase": "^7.8.2",
    "idb-keyval": "^3.2.0",
    "libphonenumber-js": "^1.7.44",
    "pako": "^1.0.10",
    "register-service-worker": "^1.7.1",
    "svgo": "^1.3.0",
    "vue": "2.6.12",
    "vue-router": "^3.1.5",
    "vue-template-compiler": "2.6.12"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "~4.5.6",
    "@vue/cli-plugin-e2e-cypress": "~4.5.6",
    "@vue/cli-plugin-eslint": "~4.5.6",
    "@vue/cli-plugin-pwa": "~4.5.6",
    "@vue/cli-plugin-unit-jest": "~4.5.6",
    "@vue/cli-service": "~4.5.6",
    "@vue/eslint-config-standard": "^5.1.2",
    "@vue/test-utils": "^1.1.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^26.3.0",
    "core-js": "^3.6.4",
    "eslint": "^7.9.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-vue": "^6.2.1",
    "fake-indexeddb": "^3.0.0",
    "firebase-tools": "^8.0.1",
    "flush-promises": "^1.0.2",
    "jest-fetch-mock": "^3.0.1",
    "jest-localstorage-mock": "^2.4.0",
    "jest-serializer-vue": "^2.0.2",
    "jsdom-worker-fix": "git://github.com/scott-fryxell/jsdom-worker.git",
    "mockdate": "^2.0.5",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "webpack-bundle-analyzer": "^3.8.0",
    "webpack-cli": "^4.0.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "browser": true,
      "es2020": true,
      "jest": true,
      "serviceworker": true,
      "worker": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:vue/recommended",
      "@vue/standard"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {
      "camelcase": 0,
      "indent": "off",
      "lines-between-class-members": 0,
      "vue/no-v-html": "off",
      "vue/prop-name-casing": [
        "error",
        "snake_case"
      ],
      "vue/singleline-html-element-content-newline": "off",
      "vue/max-attributes-per-line": [
        "error",
        {
          "singleline": 6,
          "multiline": {
            "max": 2,
            "allowFirstLine": true
          }
        }
      ],
      "vue/html-closing-bracket-spacing": [
        "error",
        {
          "selfClosingTag": "always"
        }
      ],
      "vue/html-closing-bracket-newline": [
        "error",
        {
          "singleline": "never",
          "multiline": "never"
        }
      ]
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 2%"
  ],
  "jest": {
    "notify": false,
    "notifyMode": "change",
    "bail": 0,
    "verbose": false,
    "collectCoverage": false,
    "restoreMocks": true,
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "vue"
    ],
    "setupFiles": [
      "<rootDir>/tests/unit/setup.js",
      "<rootDir>/tests/polyfill/createRange.js",
      "<rootDir>/tests/polyfill/scrollIntoView.js",
      "<rootDir>/tests/polyfill/IntersectionObserver.js",
      "<rootDir>/tests/polyfill/FileReaderSync.js",
      "jest-localstorage-mock",
      "jsdom-worker-fix"
    ],
    "transform": {
      "^.+\\.vue$": "vue-jest",
      ".+\\.(css|styl|less|sass|scss|svg|png|jpg|ttf|woff|woff2)$": "jest-transform-stub",
      "^.+\\.jsx?$": "babel-jest"
    },
    "coverageDirectory": "<rootDir>/tests/unit/coverage",
    "cacheDirectory": "<rootDir>/tests/unit/cache",
    "collectCoverageFrom": [
      "src/**/*.{js,vue}",
      "!src/main.js",
      "!src/service.worker.js",
      "!src/register_service_worker.js",
      "!src/router.js",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "snapshotSerializers": [
      "jest-serializer-vue"
    ],
    "testMatch": [
      "**/tests/unit/**/*.spec.(js|jsx|ts|tsx)|**/__tests__/*.(js|jsx|ts|tsx)"
    ],
    "testURL": "http://localhost/"
  }
}
